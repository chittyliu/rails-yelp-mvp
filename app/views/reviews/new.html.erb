<h1>You are reviewing <%= @restaurant.name.capitalize %></h1>

<% if @review.errors %>
  <% @review.errors.full_messages.each do |message| %>
  <li><%= message %></li>
  <% end %>
<% end %>

<%= simple_form_for([@restaurant, @review]) do |form|%>
    <%= form.input :content %>
    <%= form.input :rating, collection: [0, 1, 2, 3, 4, 5] %>
    <%= form.submit "add a review", class: "btn btn-primary" %>
<% end %>

<p><%= link_to "Back", restaurant_path(@restaurant) %></p>
