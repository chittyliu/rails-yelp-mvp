<h1>Adding new restaurant</h1>

<% if @restaurant.errors %>
  <% @restaurant.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
<% end %>

<%= simple_form_for (@restaurant) do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone %>
  <%= f.input :category, collection: ["chinese", "italian", "japanese", "french", "belgian"] %>
  <%= f.submit "add a restaurant", class: "btn btn-primary" %>
<% end %>

<p><%= link_to "Home", restaurants_path %></p>
